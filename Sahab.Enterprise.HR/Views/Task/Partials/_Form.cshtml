@model HR.DTO.Task.TaskVM

@{ 
    Layout = null;
    var isAdd = ViewBag.Add != null && ViewBag.Add == true?true: false;
}
    <form @(isAdd ? "action=/task/add" : "action=/task/edit") method="post">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-group-default">
                    <label>Name</label>
                    @if (!isAdd)
                    {
                        <input required type="hidden" name="Id" id="Id" value="@Model.Id" />
                        <input required type="hidden" name="EmployeeId" id="EmployeeId" value="@Model.EmployeeId" />
                    }
                    <input required id="Description" name="Description" value="@(!isAdd ? Model.Description:"")" type="text" class="form-control" placeholder="fill name">
                </div>
                <div class="form-group form-group-default">
                    <label>Task Status</label>
                    <span>
                        <input required id="StatusCode" name="StatusCode" @(!isAdd ? Model.StatusCode == 1 ? "Checked" : "" : "")  value="1" type="radio" class="form-control" placeholder="fill name"> In Progress
                        <input required id="StatusCode" name="StatusCode" @(!isAdd ? (Model.StatusCode == 2 ? "Checked" : "") : "")  value="2" type="radio" class="form-control" placeholder="fill name"> Finished
                    </span>
                </div>
            </div>
        </div>
    </form>