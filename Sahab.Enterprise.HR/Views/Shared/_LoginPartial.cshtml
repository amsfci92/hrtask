@using Microsoft.AspNet.Identity
@using Sahab.Enterprise.HR.Models

@if (Request.IsAuthenticated)
{ 
    <li class="nav-item dropdown hidden-caret">
        <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false">
            <div class="avatar-sm">
                <img src="@User.Identity.GetImageUrl()" alt="..." class="avatar-img rounded-circle">
            </div>
        </a>
        <ul class="dropdown-menu dropdown-user animated fadeIn">
            <li>
                <div class="user-box">
                    <div class="avatar-lg">
                        <img src="@User.Identity.GetImageUrl()" alt="image profile" class="avatar-img rounded">
                    </div>
                    <div class="u-text">
                        <h4>@Html.ActionLink(User.Identity.GetFullName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</h4>
                        <p class="text-muted">@User.Identity.GetUserName()</p>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/task/mytasks">My Tasks</a>

                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                }
            </li>
        </ul>
    </li>
}
